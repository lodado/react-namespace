# EditorConfig is awesome: https://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.{js,jsx,ts,tsx,json,md,html,css,scss}]
quote_type = single
tab_width = 2
semi = false
trailing_comma = all
bracket_spacing = true
arrow_parens = always

[*.md]
trim_trailing_whitespace = false
