{
  "extends": "tsconfig/react-library.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {},
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.ts",
    ".next/types/**/*.ts"
, "src/components/CounterExample.tsx"  ],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "**/*.test.*"
  ]
}
